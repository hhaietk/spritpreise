<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardElevation="5dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="9">

            <TextView
                android:id="@+id/vh_brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Esso"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/vh_street"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Heidenheimer Str. 77, 89075 Neu-Ulm"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/vh_open"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Open"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/vh_e5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Super E5"
                android:fontFamily="@font/digitalism"
                android:textSize="30dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/vh_e10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Super E10"
                android:fontFamily="@font/digitalism"
                android:textSize="30dp"
                android:visibility="gone"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_gravity="start|center">

            <TextView
                android:id="@+id/vh_diesel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Diesel"
                android:textSize="30dp"
                android:fontFamily="@font/digitalism"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
